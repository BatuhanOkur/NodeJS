<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/libs/bootstrap/dist/css/bootstrap.min.css">
    <title>Bloglar</title>
</head>
<body>
    <%- include('../partials/nav') %>

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-3">
                <%- include('../partials/category-list', categories.dataValues) %>
            </div>
            <div class="col-md-9">
                <h1 class="h3 mb-3"><%= title %></h1>
                <% if (blogs.length == 0) { %>
                    <%- include('../partials/no-product') %>
                <% } %>

                <% blogs.forEach(blog => { %>
                    <%- include('../partials/blog-card',blog.dataValues) %>
                <% }) %>

                <% if (blogs.length > 3) { %>
                    <%- include('../partials/pagination') %>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>